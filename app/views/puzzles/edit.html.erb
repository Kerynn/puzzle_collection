<%= form_with url: "/puzzles/#{@puzzle.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br>
  <br>

  <%= form.label :pieces_count %>
  <%= form.text_field :pieces_count %><br>
  <br>

  <%= form.label :put_together %>
  <%= form.check_box :put_together %><br>
  <br>

  <%= form.submit "Update Puzzle" %>
<% end %>