<%= link_to "Go to Collectors Index", "/collectors" %>
<br>
<%= link_to "Go to Puzzles Index", "/puzzles" %>
<br>
<%= link_to "Create Puzzle", "/collectors/#{@collector.id}/puzzles/new" %>
<br>
<%= link_to "Sort Puzzles Alphabetically", "/collectors/#{@collector.id}/puzzles?sorted=true"  %>
<br>
<p>
  <h4>To Display Puzzles with Pieces Count Greater than a Specific Value:</h4>
  <%= form_with url: "/collectors/#{@collector.id}/puzzles", method: :get, local: true do |form| %>
    <%= form.label "Input Pieces Count Value" %>
    <%= form.text_field "Input Pieces Count Value" %>

    <%= form.submit "Update Puzzles by Pieces Count" %>
  <% end %>
</p>
<br>

<% @puzzles.each do |puzzle| %>
<h3><p><%= puzzle.name %></p></h3>
<%= link_to "Update #{puzzle.name}", "/puzzles/#{puzzle.id}/edit" %>
<p>Pieces Count: <%= puzzle.pieces_count %></p>
<p>Put Together: <%= puzzle.put_together %></p>
<% end %>


